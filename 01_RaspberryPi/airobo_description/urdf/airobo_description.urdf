<?xml version="1.0"?>
<robot name="raspimouse">
  <link name="base_footprint"/>

  <!-- Robot Footprint -->
  <joint name="base_joint" type="fixed">
    <origin xyz="0 0 0.066"/>
    <parent link="base_footprint"/>
    <child link="base_link"/>
  </joint>

  <!-- Robot Base -->
  <link name="base_link">
     <visual>
      <geometry>
        <box size="0.205 0.153 0.108"/>
      </geometry>
      <material name="Cyan">
        <color rgba="0 1.0 1.0 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="left_wheel_joint" type="continuous">
    <origin xyz="0.0175 0.057 -0.021" rpy="-1.57 0 0"/>
    <axis xyz="0 0 1"/> 
    <parent link="base_link"/>
    <child link="left_wheel"/>
  </joint>
  
  <link name="left_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.045" length="0.01"/>
      </geometry>
      <material name="Gray">
        <color rgba="0.5 0.5 0.5 1.0"/>
      </material>
    </visual>
  </link>
  
  <joint name="right_wheel_joint" type="continuous">
    <origin xyz="0.0175 -0.057 -0.021" rpy="-1.57 0 0"/>
    <axis xyz="0 0 1"/> 
    <parent link="base_link"/>
    <child link="right_wheel"/>
  </joint>
  
  <link name="right_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.045" length="0.01"/>
      </geometry>
      <material name="Gray">
        <color rgba="0.5 0.5 0.5 1.0"/>
      </material>
    </visual>
  </link>

  <!-- Caster Wheel -->
  <link name="rear_caster">
    <visual>
      <geometry>
        <sphere radius="0.016"/>
      </geometry>
      <material name="Cyan">
        <color rgba="0 1.0 1.0 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="caster_joint" type="fixed">
    <parent link="base_link"/>
    <child link="rear_caster"/>
    <origin xyz="-0.0635 0.0 -0.058" rpy="0 0 0"/>
  </joint>
</robot>
